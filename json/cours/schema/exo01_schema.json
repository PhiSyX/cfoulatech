{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"properties": {
		"prenom": {
			"type": "string",
			"title": "Prénom",
			"description": "Cela représente le prenom d'une personne",
			"minLength": 2,
			"pattern": "^[A-Z]([a-z-\\s'])*[a-z]$"
		},
		"nom": {
			"type": "string",
			"title": "Nom",
			"description": "Cela représente le nom de famille d'une personne",
			"maxLength": 50,
			"minLength": 2,
			"pattern": "^[A-Z]([a-z-\\s'])*[a-z]$"
		},
		"email": {
			"type": "string",
			"format": "email"
		},
		"nationality": {
			"type": "string",
			"default": "Belge"
		},
		"website": {
			"type": "string",
			"format": "uri"
		}
	},
	"required": ["prenom", "nom", "email", "website"]
}
