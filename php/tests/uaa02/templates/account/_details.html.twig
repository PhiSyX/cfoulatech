<section class="personal-info flex:shrink height-full">
    <h2 class="d-flex gap=1">
        <a href="{{ path('app_account') }}" style="visibility: hidden">
            <svg width="16" height="16" viewBox="0 0 16 16"
                 xmlns="http://www.w3.org/2000/svg">
                <path fill="currentColor" fill-rule="evenodd"
                      d="m2.87 7.75l1.97 1.97a.75.75 0 1 1-1.06 1.06L.53 7.53L0 7l.53-.53l3.25-3.25a.75.75 0 0 1 1.06 1.06L2.87 6.25h9.88a3.25 3.25 0 0 1 0 6.5h-2a.75.75 0 0 1 0-1.5h2a1.75 1.75 0 1 0 0-3.5z"
                      clip-rule="evenodd"></path>
            </svg>
        </a>

        <span class="flex:full">
            {% if isMe is defined and isMe == true %}
                Mes informations
            {% else %}
                Les informations de {{ user.firstname }} {{ user.lastname }}
            {% endif %}
        </span>

        {% if isMe is defined and isMe == true %}
            <a href="{{ path('app_account_edit') }}" title="Mode édition">
                <svg width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <g fill="none">
                        <path
                            d="m12.593 23.258l-.011.002l-.071.035l-.02.004l-.014-.004l-.071-.035q-.016-.005-.024.005l-.004.01l-.017.428l.005.02l.01.013l.104.074l.015.004l.012-.004l.104-.074l.012-.016l.004-.017l-.017-.427q-.004-.016-.017-.018m.265-.113l-.013.002l-.185.093l-.01.01l-.003.011l.018.43l.005.012l.008.007l.201.093q.019.005.029-.008l.004-.014l-.034-.614q-.005-.018-.02-.022m-.715.002a.02.02 0 0 0-.027.006l-.006.014l-.034.614q.001.018.017.024l.015-.002l.201-.093l.01-.008l.004-.011l.017-.43l-.003-.012l-.01-.01z"></path>
                        <path fill="currentColor"
                              d="M13 3a1 1 0 0 1 .117 1.993L13 5H5v14h14v-8a1 1 0 0 1 1.993-.117L21 11v8a2 2 0 0 1-1.85 1.995L19 21H5a2 2 0 0 1-1.995-1.85L3 19V5a2 2 0 0 1 1.85-1.995L5 3zm6.243.343a1 1 0 0 1 1.497 1.32l-.083.095l-9.9 9.899a1 1 0 0 1-1.497-1.32l.083-.094z"></path>
                    </g>
                </svg>
            </a>
        {% else %}
            <div class="avatar">
                <img src="{{ user.avatarUrl }}" alt="{{ user.firstname }} {{ user.lastname }}" width="48" height="48">
            </div>
        {% endif %}
    </h2>

    <div>
        <dl>
            <dt>
                Adresse e-mail
            </dt>

            <dd>
                {{ user.email }}
            </dd>
        </dl>

        <dl>
            <dt>
                Nom
            </dt>

            <dd>
                {{ user.lastname }}
            </dd>
        </dl>

        <dl>
            <dt>
                Prénom
            </dt>

            <dd>
                {{ user.firstname }}
            </dd>
        </dl>

        <dl>
            <dt>
                Compte vérifié ?
            </dt>

            <dd>
                {{ user.isVerified ? 'Oui' : 'Non' }}
            </dd>
        </dl>

        <dl>
            <dt>
                Date de création
            </dt>

            <dd>
                {{ user.createdAt | date }}
            </dd>
        </dl>
    </div>

</section>
