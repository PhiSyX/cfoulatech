{% extends 'base.html.twig' %}

{% block title %}Moto{% endblock %}

{% block body %}
    <a href="{{ path('app_moto_index') }}">Retour à la liste des motos</a>

    <header class="card-heading">
        <h1>
            Moto {{ moto.nom }} (<small>{{ moto.marque }}</small>)
        </h1>

        <div class="card-actions">
            <a href="{{ path('app_moto_edit', { id: moto.id }) }}" class="btn float-right" title="Editer">&#x270E;</a>
            {{ include('moto/_delete_form.html.twig', {'button_label': 'x'}) }}
        </div>
    </header>


    <table class="table">
        <tbody>
        <tr>
            <th>ID</th>
            <td>{{ moto.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ moto.nom }}</td>
        </tr>
        <tr>
            <th>Marque</th>
            <td>{{ moto.marque }}</td>
        </tr>
        <tr>
            <th>Couleur</th>
            <td>{{ moto.couleur }}</td>
        </tr>
        <tr>
            <th>Année</th>
            <td>{{ moto.annee }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ moto.prix }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}
