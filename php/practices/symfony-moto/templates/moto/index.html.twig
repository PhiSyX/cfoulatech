{% extends 'base.html.twig' %}

{% block title %}La moto de tes rÃªves{% endblock %}

{% block body %}
    <p>
        <a href="{{ path('app_moto_new') }}" class="btn">Ajouter une nouvelle moto</a>
    </p>
    {% for moto in motos %}
        <article class="card">
            <header class="card-heading">
                <h1>
                    <a href="{{ path('app_moto_show', { id: moto.id }) }}">
                        {{ moto.nom }} (<small>{{ moto.marque }}</small>)
                    </a>
                </h1>

                <div class="card-actions">
                    <a href="{{ path('app_moto_edit', { id: moto.id }) }}" class="btn" title="Editer">&#x270E;</a>
                    {{ include('moto/_delete_form.html.twig', {'button_label': 'x'}) }}
                </div>
            </header>
        </article>
    {% endfor %}
{% endblock %}
