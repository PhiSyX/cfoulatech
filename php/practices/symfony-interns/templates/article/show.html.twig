{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>ArticleName</th>
                <td>{{ article.articleName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ article.user.username }}</td>
            </tr>
            <tr>
                <th>Published At</th>
                <td>{{ article.publishedAt ? article.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_article_index') }}" class="btn btn-secondary">back to list</a>

    <a
        {{ app.user.id == article.user.id ? '' : 'disabled' }}
        {{ app.user.id == article.user.id ? '' : 'title="You can\'t edit this article"' }}
        href="{{ path('app_article_edit', {'id': article.id}) }}"
        class="btn btn-info"
    >edit</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
