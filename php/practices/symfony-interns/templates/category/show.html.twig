{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>CategoryName</th>
                <td>{{ category.categoryName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_category_index') }}">back to list</a>

    <a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>

    {{ include('category/_delete_form.html.twig') }}

    <hr>

    <h2>Related articles ({{ category.articles | length }}) to this category</h2>

    {% for article in category.articles %}
        <li>
            <a href="{{ path('app_article_show', {id: article.id}) }}">
                {{ article.articleName }}
            </a>
        </li>
    {% else %}
        <p class="text-center text-danger">No articles related to this category</p>
    {% endfor %}
{% endblock %}
