<section class="hero">
	<div class="hero-content">
		<h1>{{ hero_title }}</h1>

		<p>
			{{ hero_content | raw }}
		</p>

		<a href="{{ path(hero_btn_link) }}" class="btn">
			{{ hero_btn }}
		</a>
	</div>

	<div class="hero-img">
		<img src="{{ asset('img/football.png') }}" alt="Football">
	</div>
</section>
